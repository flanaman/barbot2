<% provide(:title, @cocktail.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/cocktail_info' %>
    </section>
  </aside>
  <div class="span8">
    <% if @cocktail.components.any? %>
      <h3>ingredients (<%= @cocktail.components.count %>) fix me</h3>
      <ol class="cocktails">
        <%#= render @cocktails %>
      </ol>
      <%#= will_paginate @cocktails %>
    <% end %>
  </div>
</div>