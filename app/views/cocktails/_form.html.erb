<%= form_for(@cocktail) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name, "name" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, "description" %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :rating, "rating (out of 5)" %>
    <%= f.select :rating, ratings %>
  </div>
  <div class="components">
    <%= f.fields_for :components do |builder| %>
      <%= render "component_fields", f: builder %>
    <% end %>
    <div class="btn" id="links">
      <%= link_to_add_association 'add ingredient', f, :components %>
    </div>
  </div>
  <%= f.submit "save cocktail", class: "btn btn-large btn-primary" %>
<% end %>
